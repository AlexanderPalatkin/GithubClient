<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_tv_fragment_user"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_repositories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_top_rv_fragment_user"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/padding_bottom_rv_fragment_user" />
</LinearLayout>